<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.wangnian.mybatis.xml.UserDao.userMapper">
  <resultMap type="com.example.cloud_config_client.entity.sysUser" id="sysUserMap">
     <!-- 用id属性来映射主键字段 -->
      <id property="userId" column="user_id"/>
        <!-- 用result属性来映射非主键字段 -->
      <result property="userName" column="user_name"/>
      <result property="userPassword" column="user_password"/>
      <result property="phone"  column ="phone"></result>
  </resultMap>
  <select id="findAll" resultType="sysUserMap">
     select user_id,user_name,user_password,phone  from sys_user 
   </select>
   <select id="findByParameter" resultType="sysUserMap" parameterType="sysUser">
     select user_id ,user_name,user_password,phone from sys_user where 1=1
     <if test="userId !=null and  &quot;&quot;.equeal(id)"> and user_id = #{userId}</if>
   
   </select>
</mapper>